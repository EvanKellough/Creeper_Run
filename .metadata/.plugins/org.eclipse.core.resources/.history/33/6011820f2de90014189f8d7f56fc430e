package Entity;

import java.io.FileNotFoundException;
import java.io.PrintWriter;
import Entity.NewPlayerSave;

public class NewGame {
	
	public static void init(){
		int lives = NewPlayerSave.getLives();
		int health = NewPlayerSave.getHealth();
		long time = NewPlayerSave.getTime();
		
		String filename = "SaveGame.txt";
				try{
					PrintWriter outputStream = new PrintWriter(filename);
					outputStream.println(lives); //stores player info in RAM
					outputStream.println(health);
					outputStream.println(time);
					outputStream.close(); //flushes data from RAM to save file
					System.out.println("Player Game Saved"); //prints to console
				}catch (FileNotFoundException e){
					e.printStackTrace();
				}
		
	}
}
